{
  "name": "Sample Scheduler RabbitMQ",
  "website": "https://www.hypertrack.com/",
  "success_url": "/",
  "description": "Sample RabbitMQ scheduler implementation for Placeline application",
  "addons": ["papertrail:choklad", "cloudamqp:lemur"],
  "formation": {
    "web": {
      "quantity": 0,
      "size": "free"
    },
    "worker": {
      "quantity": 1,
      "size": "free"
    },
    "scheduler": {
      "quantity": 1,
      "size": "free"
    }
  },
  "env": {
    "HT_ACCOUNT_ID": {
      "description": "Your HyperTrack AccountId from https://dashboard.hypertrack.com/setup",
      "value": ""
    },
    "HT_SECRET_KEY": {
      "description": "Your HyperTrack SecretKey from https://dashboard.hypertrack.com/setup",
      "value": ""
    },
    "MONGODB_URI": {
      "description": "Your MongoDB connection string (could be from the sample server)",
      "value": "mongodb://"
    }
  },
  "repository": "https://github.com/hypertrack/sample-scheduler-rabbitmq",
  "logo": "https://dashboard.hypertrack.com/assets/hypertrack-bw.svg",
  "keywords": [
    "sample",
    "hypertrack",
    "placeline",
    "scheduler",
    "rabbitmq",
    "message-broker",
    "ampq",
    "messaging",
    "heroku"
  ]
}
